{
    "name": "wucdbm/sphinx-query-builder",
    "type": "library",
    "description": "A Sphinx Query Builder extension for the Laravel Database package",
    "keywords": [
        "sphinx",
        "sphinxsearch",
        "sphinx query builder",
        "laravel sphinx",
        "laravel sphinx query builder",
        "wucdbm"
    ],
    "authors": [
        {
            "name": "Martin Kirilov",
            "email": "wucdbm@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": ">=8.0",
        "illuminate/database": "^12.0"
    },
    "suggest": {
        "illuminate/events": "If you would like to use illuminate/database events. Check README.md for more information."
    },
    "require-dev": {
        "roave/security-advisories": "dev-master",
        "wucdbm/php-cs-fixers": "^0.3.0|^0.4.0"
    },
    "autoload": {
        "psr-4": {
            "Wucdbm\\Component\\SphinxQueryBuilder\\": "src"
        }
    },
    "config": {
        "bin-dir": "bin"
    },
    "license": "MIT"
}
